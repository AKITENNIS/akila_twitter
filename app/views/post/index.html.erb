<%@posts.each do |post| %>
  <p>
    <%=post.id%> <%=link_to post.content ,"/post/#{post.id}/show"%>　by<%=link_to post.user.name ,"/user/#{post.user.id}/show"%>
    <%if Favorite.find_by(user_id:current_user.id,post_id:post.id) then%>
      <%= link_to "いいねを取り消す",post_remove_favorite_path(post.id,user_id: current_user.id),method: :delete%>
    <%else%>
      <%= link_to "いいね",post_favorite_path(post.id,user_id: current_user.id),method: :put%>
    <%end%>
    <%=link_to "いいねした人" ,"/post/#{post.id}/favorite_user"%>
    <%=Favorite.where(post_id:post.id).count%>
    <%if post.user == current_user%>
      <%= link_to "編集", "/post/#{post.id}/edit"%>
      <%= link_to "削除", "/post/#{post.id}/destroy",method: :delete%>
    <%end%>
  </p>
<%end%>

<%= link_to "投稿", "/post/new"%>

